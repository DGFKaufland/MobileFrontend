<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core" >
    <Dialog title="{i18n>textSettings}">
        <Text text="{i18n>textYourName}" width="30%"/>
        <Input value="{localContact>/name}" width="70%" />

        <Text text="{i18n>textLanguage}" width="30%"/>
        <Input value="{settings>/lang}" width="70%" />

        <beginButton>
            <Button
                    text="{i18n>dialogCloseButtonText}"
                    press="onCloseDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>