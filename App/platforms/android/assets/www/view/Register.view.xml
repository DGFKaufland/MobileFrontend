<mvc:View
        controllerName="sap.ui.ksilence.controller.Register"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc">
    <Page title="{i18n>homePageTitle}">

        <content>
            <Panel class="bluePanelHeader">
                <content>
                    <Image src="img/kauflandLogoWeiss.png" />
                    <Text text="{i18n>homePageTitleLogin}"></Text>
                </content>
            </Panel>

            <Panel>
                <content>
                    <Text text="{i18n>textYourName}" width="20%"></Text>
                    <Input value="{localContact>/name}" width="80%" />

                    <Button class="loginButton" text="{i18n>loginButtonText}" press="registerDevice" width="50%" icon="img/login_pic.png" />
                </content>
            </Panel>
        </content>

    </Page>
</mvc:View>